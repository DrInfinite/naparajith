export const prerender = false;

import A from "@/components/A.astro";
import GitHub from "@/components/quick-view/github/GitHub.astro";
import GitHubLoading from "@/components/quick-view/github/GitHubLoading.astro";
import LeetCode from "@/components/quick-view/leetcode/LeetCode.astro";
