---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="500" description="there was an unknown server-side error">
	<div class="flex h-[50vh] flex-col gap-4">
		<h3 class="text-center">
			500 | The Server randomly decided to stop working ;(
		</h3>
		<p class="text-justify">
			Try reloading the page or better, go back to start navigating again.
			Sorry for any inconviences caused!
		</p>

		<button class="mx-auto place-self-center" onclick="history.back()">
			<span
				class="bg-gradient-to-br from-[#d83333] to-[#f041ff] bg-clip-text text-transparent"
			>
				Go Back
			</span>
		</button>
	</div>
</Layout>
