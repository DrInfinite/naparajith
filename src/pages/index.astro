---
import { GithubProfile } from "@/actions/github-profile";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

const github = await GithubProfile();
---

<Layout title="Home">
	<h1 class="text-center">{github.name}</h1>
	<article>
		<figure>
			<Image
				src={github.avatar_url ?? "/favicon.svg"}
				alt={github.profile ?? "DrInfinite"}
				width={260}
				height={260}
				class="mx-auto place-items-center object-cover ~size-48/96"
			/>
			<figcaption class="text-center">
				The image comes from my <a
					href={github.html_url}
					target="_blank"
				>
					GitHub Profile
				</a>
			</figcaption>
		</figure>
		<p><strong>{github.bio}</strong></p>
	</article>
	<main>
		<p>
			This is the personal web site of T L Naparajith. The content and
			views showcased here are my own and do not reflect the views and
			positions any organisation or corporate entity I work with or have
			previously worked with. For the sake of separation, this site has
			always been hosted elsewhere and managed separately.
		</p>
	</main>
	<div class="flex flex-wrap border border-border ~gap-2/4 ~p-2/4">
		<a href="/bio" title="Bio">About Me</a>
		<a href="/quick-view" title="Quick View" data-astro-prefetch="load">
			Quick View
		</a>
		<a href="/quotes" title="Quotes">Quotes</a>
		<a href="/children-of-the-soil" title="Children of the Soil"
			>Children of the Soil</a
		>
		<a href="/policy/license.md" title="License">License</a>
	</div>
</Layout>
