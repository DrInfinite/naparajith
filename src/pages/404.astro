import Layout from "@/layouts/Layout.astro";
---

<Layout
	title="404"
	description="the page that you are looking for doesn't exist"
>
	<div class="flex h-[60vh] flex-col place-content-center gap-4">
		<h3 class="text-center">
			404 | The Page you are looking for has moved or doesn't exist ;(
		</h3>
		<p class="text-justify">
			Try looking for another page or better, go back to start navigating again.
			Sorry for any inconviences caused!
		</p>
		<button
			class="mx-auto place-self-center rounded-full px-4"
			onclick="history.back()"
		>
			<span
				class="bg-gradient-to-br from-[#d83333] to-[#f041ff] bg-clip-text text-transparent"
			>
				Go Back
			</span>
		</button>
	</div>
</Layout>
