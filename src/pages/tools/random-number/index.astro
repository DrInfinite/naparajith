---
import ToolsLayout from "@/layouts/ToolsLayout.astro";
import RandomNumber from "@/tools/random-number";

const instructions = [
    "Set the Lower Limit and Upper Limit for number generation",
    "Click the Generate Button",
    "See the numbers get converted in real time.",
    "Copy the converted values if needed",
    "Click the Reset Button to set the Lower and Upper Limits to the Min and Max safe values",
    "Repeat for any other conversions",
];
---

<ToolsLayout
    title="Random Number Generator"
    description="Generate a random number based on generation rules that you set."
    instructions={instructions}
>
    <RandomNumber client:only />
</ToolsLayout>
