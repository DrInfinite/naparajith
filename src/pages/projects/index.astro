import Layout from "@/layouts/Layout.astro";

const projects: {
    url: string;
    name: string;
    description: string;
    source: "Internal Link" | "GitHub" | "GitLab" | "External Website";
}[] = [
    {
        url: "https://github.com/basecamp/omarchy",
        name: "Omarchy",
        description: "Opinionated Arch/Hyprland Setup",
        source: "GitHub",
    },
    {
        url: "/tools",
        name: "Tools",
        description:
            "A collection of simple tools that makes everyday tasks just a bit simpler.",
        source: "Internal Link",
    },
];
---

<Layout
    title="Projects"
    description="A curated list of technical projects that I have worked on"
>
    <h1>Projects</h1>
    <p>
        A curated list of technical projects that I have worked on / contributed
        to.
    </p>
    {
        projects.map((project) => (
            <a
                href={project.url}
                class="flex w-full flex-col justify-evenly rounded-none border border-border decoration-transparent ~mb-4/8 hover:bg-foreground/10"
                target="_blank"
            >
                <article class="~gap-2/4 ~p-2/4">
                    <div class="flex justify-between">
                        <h4
                            class="-my-px truncate font-sans"
                            transition:name="post-title"
                        >
                            {project.name}
                        </h4>
                        <small class="bg-gradient-to-r from-[#1e57b7] to-[#4762f4] bg-clip-text text-white/25">
                            {project.source}
                        </small>
                    </div>
                    <small>{project.description}</small>
                </article>
            </a>
        ))
    }
    <p class="italic">
        Very much a work in progress, please don't be shocked by the emptiness
        ;)
    </p>
</Layout>
