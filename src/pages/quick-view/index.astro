export const prerender = false;

import Layout from "@/layouts/Layout.astro";
import ACard from "@/components/ACard.astro";
import { getCollection } from "astro:content";
import { LeetcodeProfile } from "@/actions/leetcode-profile";
import { Image } from "astro:assets";

const blog = await getCollection("blog");
const leetcode = await LeetcodeProfile();
---

<Layout
	title="Quick View"
	description="A collection of Quick Links for my personal website"
>
	<main class="flex flex-col justify-around ~gap-8/16">
		<article class="flex justify-evenly">
			<span class="~size-24/48">
				<Image
					alt={"DrInfinite"}
					class="mx-auto ~rounded-none/xl"
					width={540}
					height={540}
					decoding={"async"}
					loading={"eager"}
					src={"https://avatars.githubusercontent.com/u/74095696?v=4"}
				/>
			</span>
			<div>
				<h2 class="text-center">Naparajith (Naps) T L</h2>
				<h3 class="text-center">SAFe 6.0 Certified SDET</h3>
			</div>
		</article>

		<div class="~space-y-4/8">
			<div class="flex flex-wrap justify-evenly ~gap-2/4">
				<ACard
					href={"https://github.com/DrInfinite"}
					title={`GitHub - DrInfinite`}
					target="_blank"
				>
					GitHub
				</ACard>
				<ACard
					href="https://www.linkedin.com/in/naparajith/"
					title="LinkedIn - Naparajith T L"
					target="_blank"
				>
					LinkedIn
				</ACard>
				<ACard
					href={"https://bsky.app/profile/naparajith.in"}
					title={`Naparajith | DrInfinite (@naparajith.in)`}
					target="_blank"
				>
					BlueSky
				</ACard>
				<ACard href="/" title="Portfolio">Portfolio</ACard>
				<ACard href={"/contact"} title={"Contact"}>Contact</ACard>
			</div>

			<div class="flex justify-evenly ~gap-4/8">
				<ACard href="/quick-view/leetcode" title="LeetCode">
					<span class="flex flex-col">
						LeetCode
						<small class="font-normal">
							Last Solved: {
								new Date(
									parseInt(leetcode.recentSubmissionList?.at(0)?.timestamp!) *
										1000,
								)
									.toDateString()
									.slice(4, 15)
							}
						</small>
					</span>
				</ACard>
				<ACard href="/blog" title="Portfolio - Blog">
					<span class="flex flex-col">
						Blog
						<small class="font-normal">
							Last Posted: {
								blog.at(0)?.data.created.toDateString().slice(4, 15)
							}
						</small>
					</span>
				</ACard>
			</div>
		</div>
	</main>
</Layout>
