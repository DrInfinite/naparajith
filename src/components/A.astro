type Props = {
	css?: string | null | undefined;
} & astroHTML.JSX.AnchorHTMLAttributes;

const { href, title, target, css } = Astro.props;
---

<a
	class={`group relative inline-flex w-fit flex-col no-underline decoration-0 ${css}`}
	href={href}
	title={title}
	target={target}
>
	<span class="z-50">
		<slot />
	</span>
	<span
		class="absolute inset-x-0 bottom-0 h-[1px] bg-gradient-to-r from-[#d83333] to-[#f041ff] group-hover:h-full group-active:from-[#f041ff] group-active:to-[#d83333] md:h-[2px]"
	></span>
</a>
