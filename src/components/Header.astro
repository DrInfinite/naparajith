---
import A from "@/components/A.astro";
---

<header
	class="my-10 border border-l-0 border-r-0 border-t-0 border-border pb-4"
>
	<h3 class="text-center">
		{Astro.url.pathname.toString().replace("/", "").replace(/\/.*/, "")}
	</h3>
	<div class="flex justify-between" transition:persist>
		<div class="flex flex-wrap justify-evenly gap-4">
			<A href="/">Home</A>
			<A href="/profile"> Profile </A>
			<A href="/quick-view"> Quick View </A>
		</div>

		<span>
			<button
				class="rounded-full px-4"
				onclick="window.open('https:\/\/flowcv.com/resume/mdrssqq018')"
				title="Resume"
			>
				<span
					class="bg-gradient-to-r from-[#d83333] to-[#f041ff] bg-clip-text text-transparent"
				>
					Resume
				</span>
			</button>
		</span>
	</div>
</header>
