import A from "@/components/A.astro";
import Button from "./Button.astro";
---

<header
	class="my-10 border border-l-0 border-r-0 border-t-0 border-border pb-4"
>
	<h3 class="text-start">
		<span class="animate-pulse">~</span>/{
			Astro.url.pathname.startsWith("/blog") ||
			Astro.url.pathname.startsWith("/quotes-i-like")
				? Astro.url.pathname.toString().replace("/", "").replace(/\/.*/, "")
				: Astro.url.pathname.toString().replace("/", "")
		}
		<!-- ~/{Astro.url.pathname.toString().replace("/", "").replace(/\/.*/, "")} -->
	</h3>
	<div class="flex justify-between" transition:persist>
		<div class="flex flex-wrap justify-evenly ~gap-2/4">
			<A href="/">Home</A>
			<A href="/profile"> Profile </A>
			<A href="/quick-view"> Quick View </A>
		</div>

		<span>
			<Button
				onclick="window.open('https:\/\/flowcv.com/resume/mdrssqq018')"
				title="Resume"
			>
				Resume
			</Button>
		</span>
	</div>
</header>
