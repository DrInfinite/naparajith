---
import A from "@/components/A.astro";

const pathname = Astro.url.pathname;
---

<header
	class="my-10 border border-l-0 border-r-0 border-t-0 border-border pb-4"
>
	<h3 class="text-center">
		{pathname.toString().replace("/", "").replace(/\/.*/, "")}
	</h3>
	<div class="flex justify-between" transition:persist>
		<div class="flex flex-wrap justify-evenly gap-4">
			<A href="/">Home</A>
			<A href="/profile"> Profile </A>
			<!-- <A href="/blog">Blog</A> -->
			<A href="/quick-view"> Quick View </A>
		</div>

		<span>
			{
				pathname.match(/\/blog\/[^/]+/) && (
					<button class="rounded-full px-4" onclick="history.back()">
						<span class="bg-gradient-to-r from-[#d83333] to-[#f041ff] bg-clip-text text-transparent">
							&larr; Back
						</span>
					</button>
				)
			}
			<button class="rounded-full px-4">
				<a
					href="https://flowcv.com/resume/mdrssqq018"
					title="Resume"
					target="_blank"
					class="bg-gradient-to-r from-[#d83333] to-[#f041ff] bg-clip-text text-transparent"
				>
					Resume
				</a>
			</button>
		</span>
	</div>
</header>
