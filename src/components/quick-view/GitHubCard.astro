import ACard from "@/components/ACard.astro";
import { GithubProfile } from "@/actions/github-profile";

const updated_at = new Date((await GithubProfile()).updated_at).toDateString();
---

<ACard href="/quick-view/github" title="GitHub" class="group" target={"_blank"}>
	<span class="flex flex-col">
		GitHub
		<div
			class="h-[2px] bg-gradient-to-r from-[#1e57b7] to-[#4762f4] transition-all duration-300 ~my-0/2"
		>
		</div>
		<small class="font-normal">
			<u class="block md:hidden">Updated On</u>
			<u class="hidden md:inline">Updated On:</u>
			<strong
				>{
					updated_at !== "Invalid Date" ? updated_at.slice(4, 10) : "NA"
				}</strong
			>
		</small>
	</span>
</ACard>
